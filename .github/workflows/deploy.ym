jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: 1. Ambil Kodingan Terbaru
        uses: actions/checkout@v3

      # --- PERBAIKAN DI SINI ---
      - name: 2. Kirim File ke Folder SEMENTARA (User Home)
        uses: appleboy/scp-action@master
        with:
          host: ${{ secrets.AWS_HOST }}
          username: ${{ secrets.AWS_USER }}
          key: ${{ secrets.AWS_KEY }}
          source: "."
          target: "pustani_temp" # Upload ke folder Home dulu (pasti aman)

      - name: 3. Pindahkan File & Restart Docker
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.AWS_HOST }}
          username: ${{ secrets.AWS_USER }}
          key: ${{ secrets.AWS_KEY }}
          script: |
            # 1. Buat folder tujuan jika belum ada
            sudo mkdir -p /var/www/html/pustani
            
            # 2. Pindahkan file dari temp ke folder asli menggunakan rsync
            sudo rsync -av --remove-source-files pustani_temp/ /var/www/html/pustani/
            rm -rf pustani_temp

            # 3. Masuk ke folder project
            cd /var/www/html/pustani
            
            # 4. Perbaiki izin file agar bisa diakses web server
            sudo chown -R www-data:www-data /var/www/html/pustani
            sudo chmod -R 775 /var/www/html/pustani

            # 5. Restart Aplikasi
            sudo docker-compose down
            sudo docker-compose up -d --build
            
            echo "Deploy Sukses!"